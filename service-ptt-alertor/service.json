{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "ECS Service",
  "Resources": {
    "SecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "EC2 security group for Application Load Balancer",
        "VpcId": {
          "Fn::ImportValue": {
            "Fn::Sub": "Production-VPC-VpcId"
          }
        },
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": 1,
            "ToPort": 65535,
            "CidrIp": "0.0.0.0/0"
          }
        ],
        "SecurityGroupEgress": [
          {
            "IpProtocol": -1,
            "FromPort": 1,
            "ToPort": 65535,
            "CidrIp": "0.0.0.0/0"
          }
        ],
        "Tags": [
          {
            "Key": "Name",
            "Value": "Production-Ptt-Alertor"
          }
        ]
      }
    },
    "CloudWatchLogGroup": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "LogGroupName": "Production-Ptt-Alertor",
        "RetentionInDays": "400"
      }
    },
    "TaskDefinition": {
      "Type": "AWS::ECS::TaskDefinition",
      "Properties": {
        "Family": "Production-Ptt-Alertor",
        "Volumes": [
          {
            "Name": "env",
            "Host": {
              "SourcePath": "/etc/ecs/.env"
            }
          }
        ],
        "ContainerDefinitions": [
          {
            "Name": "Ptt-Alertor",
            "Image": {
              "Fn::Sub": "${AWS::AccountId}.dkr.ecr.${AWS::Region}.amazonaws.com/ptt-alertor-repo:latest"
            },
            "Essential": true,
            "Cpu": 500,
            "Memory": 400,
            "PortMappings": [
              {
                "ContainerPort": 9090,
                "HostPort": 80
              },
              {
                "ContainerPort": 6379,
                "HostPort": 33008
              },
              {
                "ContainerPort": 6060,
                "HostPort": 33009
              }
            ],
            "MountPoints": [
              {
                "ContainerPath": "/.env",
                "SourceVolume": "env",
                "ReadOnly": true
              }
            ],
            "Environment": [
              {
                "Name": "APP_ENV",
                "Value": "Production"
              },
              {
                "Name": "Redis_EndPoint",
                "Value": {
                  "Fn::ImportValue": {
                    "Fn::Sub": "Production-Redis-EndPoint"
                  }
                }
              },
              {
                "Name": "Redis_Port",
                "Value": {
                  "Fn::ImportValue": {
                    "Fn::Sub": "Production-Redis-Port"
                  }
                }
              }
            ],
            "EntryPoint": [
              "sh",
              "-c"
            ],
            "Command": [
              "export $(cat /.env | grep -v ^# | xargs);./ptt-alertor"
            ],
            "LogConfiguration": {
              "LogDriver": "awslogs",
              "Options": {
                "awslogs-group": {
                  "Ref": "CloudWatchLogGroup"
                },
                "awslogs-region": {
                  "Ref": "AWS::Region"
                },
                "awslogs-stream-prefix": "Production"
              }
            }
          }
        ]
      }
    },
    "EcsService": {
      "Type": "AWS::ECS::Service",
      "Properties": {
        "ServiceName": "Ptt-Alertor",
        "Cluster": {
          "Fn::ImportValue": "Production-ECS-Cluster"
        },
        "DesiredCount": 1,
        "TaskDefinition": {
          "Ref": "TaskDefinition"
        },
        "LoadBalancers": [
          {
            "ContainerName": "Ptt-Alertor",
            "ContainerPort": 9090,
            "LoadBalancerName": {
              "Ref": "ElasticLoadBalancer"
            }
          }
        ]
      }
    },
    "ElasticLoadBalancer": {
      "Type": "AWS::ElasticLoadBalancing::LoadBalancer",
      "Properties": {
        "SecurityGroups": [
          {
            "Ref": "SecurityGroup"
          }
        ],
        "CrossZone": true,
        "Subnets": [
          {
            "Fn::ImportValue": "Production-VPC-PublicSubnet-A"
          },
          {
            "Fn::ImportValue": "Production-VPC-PublicSubnet-B"
          },
          {
            "Fn::ImportValue": "Production-VPC-PublicSubnet-C"
          }
        ],
        "Scheme": "internet-facing",
        "Listeners": [
          {
            "LoadBalancerPort": 80,
            "InstancePort": 80,
            "Protocol": "HTTP",
            "InstanceProtocol": "HTTP"
          },
          {
            "LoadBalancerPort": 443,
            "InstancePort": 80,
            "Protocol": "SSL",
            "InstanceProtocol": "TCP",
            "SSLCertificateId": {
              "Fn::ImportValue": "Production-DinoLai-Cert-Arn"
            }
          }
        ],
        "HealthCheck": {
          "Target": "HTTP:80/",
          "HealthyThreshold": 10,
          "UnhealthyThreshold": 2,
          "Interval": 30,
          "Timeout": 5
        },
        "LoadBalancerName": "Production-Ptt-Alertor-LB",
        "Tags": [
          {
            "Key": "Name",
            "Value": "Production-Ptt-Alertor-LB"
          }
        ]
      }
    }
  },
  "Outputs": {
    "EcsService": {
      "Value": {
        "Fn::GetAtt": [
          "EcsService",
          "Name"
        ]
      },
      "Description": "name of ecs service",
      "Export": {
        "Name": "Production-ECS-Service-Name"
      }
    },
    "ElasticLoadBalancer": {
      "Value": {
        "Ref": "ElasticLoadBalancer"
      },
      "Description": "name of elb",
      "Export": {
        "Name": "Production-Ptt-Alertor-ELB"
      }
    },
    "CloudWatchLogGroup": {
      "Value": {
        "Ref": "CloudWatchLogGroup"
      },
      "Description": "name of log group",
      "Export": {
        "Name": "Production-Ptt-Alertor-LogGroup"
      }
    },
    "CloudWatchLogGroupArn": {
      "Value": {
        "Fn::GetAtt": [
          "CloudWatchLogGroup",
          "Arn"
        ]
      },
      "Description": "arn of log group",
      "Export": {
        "Name": "Production-Ptt-Alertor-LogGroup-Arn"
      }
    }
  }
}