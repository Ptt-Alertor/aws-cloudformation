{
	"AWSTemplateFormatVersion": "2010-09-09",
	"Description": "Production Certificate Manager",
	"Resources": {
		"PttAlertorComTwCert": {
			"Type": "AWS::CertificateManager::Certificate",
			"Properties": {
				"DomainName": "*.pttalertor.com.tw",
				"SubjectAlternativeNames" : [ "*.pttalertor.com.tw", "*.dinolai.com", "pttalertor.com.tw", "dinolai.com" ],
				"DomainValidationOptions" : [{
			    	"DomainName" : "pttalertor.com.tw",
			      	"ValidationDomain" : "pttalertor.com.tw"
			    },{
			    	"DomainName" : "dinolai.com",
			      	"ValidationDomain" : "dinolai.com"
			    }],
			    "Tags" : [ "pttalertor" ]
			}
		}
	},
	"Outputs": {
		"PttAlertorComTwCertArn": {
			"Value": { "Ref": "PttAlertorComTwCert"},
			"Description": "Arn of *.pttalertor.com.tw certificate",
			"Export": {
				"Name": "Production-PttAlertor-Cert-Arn"
			}
		}
	}
}